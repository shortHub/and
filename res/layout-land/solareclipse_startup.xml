<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@color/Black"
  android:layout_width="fill_parent" 
  android:layout_height="fill_parent" 
  android:orientation="vertical">
  
  <TextView
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:gravity="center"
  	android:layout_marginTop="5dip"
  	android:textSize="24dip"
  	android:text="@string/startup_description"
  />
  
  <LinearLayout
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
	android:layout_marginTop="10px"  	
  	android:orientation="horizontal">
	  
	  <LinearLayout
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:layout_gravity="right"
	  	android:orientation="vertical">
	  	
		  <Button
			android:id="@+id/bu_showSolarTableView"
			style="@style/sty_bu_por"
			android:text="@string/butext_showTableView"
			android:onClick="onClickShowSClipse"
		  />
		
		  <Button
		  	android:id="@+id/bu_googleMaps"
			style="@style/sty_bu_por"
		  	android:text="@string/butext_googleMaps"
		  />
		  
		  <Button
		  	android:id="@+id/bu_solarDict"
		  	style="@style/sty_bu_por" 
		  	android:text="@string/butext_solarDict"
		  	android:onClick="onClickShowSolarDict"
		  />		
	  </LinearLayout>    	
  	
	  <ImageView
	  	android:id="@+id/blub"
	  	android:src="@drawable/subg"
	   	android:layout_gravity="right"
	  	android:clickable="false"
	  	android:longClickable="false"
	  	android:saveEnabled="false" 
	  	android:scaleType="fitXY" 
	  	android:layout_width="match_parent" 
	  	android:layout_height="match_parent"/>
  </LinearLayout>
  
</LinearLayout>
