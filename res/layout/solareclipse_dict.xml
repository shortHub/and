<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/Black" android:layout_width="match_parent"
	android:layout_height="match_parent" android:orientation="vertical"
	android:layout_gravity="bottom">

	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_gravity="center"
		android:textSize="24dip" android:textStyle="bold"
		android:layout_marginBottom="3dip" android:id="@+id/tv_astrodictHead" />

	<View android:layout_height="2dip" android:layout_width="fill_parent"
		android:layout_marginBottom="3dip" android:background="#FF909090" />

	<ScrollView android:layout_width="fill_parent" android:id="@+id/test"
		android:layout_height="fill_parent">

		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/tv_astrodictContent" />

	</ScrollView>

</LinearLayout>